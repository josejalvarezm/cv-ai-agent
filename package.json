{
  "name": "cv-assistant-worker",
  "version": "1.0.0",
  "description": "CV Assistant with semantic search using Cloudflare Workers, D1, Vectorize, and Workers AI",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run deploy:dev && npm run deploy:production",
    "deploy:dev": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "deploy:both": "npm run build && npm run deploy",
    "db:create": "wrangler d1 create cv_assistant_db",
    "db:migrate": "wrangler d1 execute cv_assistant_db --file=./schema/schema.sql",
    "db:seed": "wrangler d1 execute cv_assistant_db --file=./schema/seed.sql",
    "db:migrate:local": "wrangler d1 execute cv_assistant_db --local --file=./schema/schema.sql",
    "db:seed:local": "wrangler d1 execute cv_assistant_db --local --file=./schema/seed.sql",
    "db:migrate:outcome": "wrangler d1 execute cv_assistant_db --remote --file=./migrations/003_add_outcome_fields.sql",
    "db:seed:outcome": "wrangler d1 execute cv_assistant_db --remote --file=./migrations/002_seed_data_tech_only.sql",
    "db:clear": "wrangler d1 execute cv_assistant_db --remote --command=\"DELETE FROM vectors; DELETE FROM technology;\"",
    "kv:create": "wrangler kv:namespace create CV_VECTORS",
    "vectorize:create": "wrangler vectorize create cv-skills-index --dimensions=768 --metric=cosine",
    "index:remote": "node scripts/index-vectors.js",
    "health": "curl https://cv-assistant-worker.{YOUR_WORKERS_SUBDOMAIN}/health",
    "reseed": "pwsh -File scripts/reseed-ai-data.ps1",
    "reseed:force": "pwsh -File scripts/reseed-ai-data.ps1 -Force",
    "reseed:local": "pwsh -File scripts/reseed-ai-data.ps1 -Environment local",
    "reseed:dryrun": "pwsh -File scripts/reseed-ai-data.ps1 -DryRun",
    "deploy:full": "pwsh -File scripts/deploy-cv-assistant.ps1",
    "deploy:force": "pwsh -File scripts/deploy-cv-assistant.ps1 -Force",
    "deploy:quick": "npm run build && npm run deploy",
    "enrich:json": "node scripts/enrich-json.js",
    "analytics": "node scripts/fetch-ai-analytics.js",
    "analytics:today": "node scripts/fetch-ai-analytics.js --today",
    "analytics:week": "node scripts/fetch-ai-analytics.js --week",
    "analytics:month": "node scripts/fetch-ai-analytics.js --month",
    "analytics:export": "node scripts/fetch-ai-analytics.js --export",
    "analytics:csv": "node scripts/fetch-ai-analytics.js --export --csv",
    "test": "node tests/run-tests.js",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.json",
    "gen:build": "tsc -p tsconfig.tools.json"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "vectorize",
    "ai",
    "cv",
    "semantic-search"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.5",
    "cli-table3": "^0.6.5",
    "dotenv": "^16.6.1",
    "typescript": "^5.3.3",
    "wrangler": "^4.43.0"
  }
}
